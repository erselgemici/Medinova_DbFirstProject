<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Medinova | Hastane Yönetim Paneli</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-color: #13C5DD; /* Medinova Turkuazı */
            --dark-color: #1D2A4D; /* Medinova Laciverti */
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: #f5f7ff;
            background-image: radial-gradient(#13c5dd 0.5px, #f5f7ff 0.5px);
            background-size: 20px 20px;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            background: #ffffff;
            width: 100%;
            max-width: 450px;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(29, 42, 77, 0.08);
            padding: 3rem;
            border: 1px solid rgba(19, 197, 221, 0.1);
        }

        .brand-logo {
            width: 80px;
            height: 80px;
            background: rgba(19, 197, 221, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            color: var(--primary-color);
            font-size: 2rem;
        }

        .form-control {
            background-color: #f8f9fa;
            border: 1px solid #e9ecef;
            padding: 0.8rem 1rem;
            border-radius: 8px;
            font-size: 0.95rem;
            transition: all 0.3s;
        }

            .form-control:focus {
                background-color: #fff;
                border-color: var(--primary-color);
                box-shadow: 0 0 0 4px rgba(19, 197, 221, 0.15);
            }

        .btn-login {
            background-color: var(--primary-color);
            border: none;
            color: white;
            padding: 1rem;
            border-radius: 8px;
            font-weight: 600;
            width: 100%;
            margin-top: 1rem;
            transition: all 0.3s;
        }

            .btn-login:hover {
                background-color: #0fb2c9;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(19, 197, 221, 0.3);
            }

        .form-label {
            font-weight: 500;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
        }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="brand-logo">
            <i class="fa-solid fa-heart-pulse"></i>
        </div>

        <div class="text-center mb-4">
            <h3 class="fw-bold text-dark">Hoş Geldiniz</h3>
            <p class="text-muted small">Medinova Yönetim Paneline erişmek için lütfen giriş yapın.</p>
        </div>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="mb-3">
                <label class="form-label">Kullanıcı Adı</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="fa fa-user"></i></span>
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control border-start-0", placeholder = "Örn: admin" })
                </div>
                @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
            </div>

            <div class="mb-4">
                <label class="form-label">Şifre</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="fa fa-lock"></i></span>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control border-start-0", placeholder = "••••••••" })
                </div>
                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
            </div>

            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger p-2 small" })

            <button type="submit" class="btn btn-login">
                Giriş Yap <i class="fa-solid fa-arrow-right ms-2"></i>
            </button>

            <div class="text-center mt-4">
                <p class="text-muted small mb-0">&copy; @DateTime.Now.Year Medinova Hospital System</p>
            </div>
        }
    </div>

</body>
</html>
