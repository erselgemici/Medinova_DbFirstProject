@using Medinova.Models
@model List<Testimonial>

<div class="container-fluid py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5" style="max-width: 500px;">
            <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5">Hasta Yorumları</h5>
            <h1 class="display-4">Hakkımızda Söylenenler</h1>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="owl-carousel testimonial-carousel">

                    @foreach (var item in Model)
                    {
                        <div class="testimonial-item text-center">
                            <div class="position-relative mb-5">
                                <i class="fa fa-quote-left fa-3x text-primary"></i>
                            </div>

                            <p class="fs-4 fw-normal">
                                @item.Description
                            </p>
                            <hr class="w-25 mx-auto">

                            <h3>@item.Name</h3>

                            <h6 class="fw-normal text-primary mb-3">@item.Profession</h6>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
