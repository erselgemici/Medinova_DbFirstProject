@model List<Medinova.DTOs.ResultDoctorDto>
@{
    ViewBag.Title = "Doktor Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-secondary"><i class="fa fa-user-md me-2"></i>Doktor Listesi</h5>
        <a href="/AdminDoctor/CreateDoctor/" class="btn btn-primary btn-sm">
            <i class="fa fa-plus me-1"></i> Yeni Doktor Ekle
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 50px;">#</th>
                        <th style="width: 80px;">Resim</th>
                        <th>Ad Soyad</th>
                        <th>Bölüm</th>
                        <th class="text-end" style="width: 200px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>
                                    <img src="~/Templates/Medinova-1.0.0/img/@item.ImageUrl"
                                         class="rounded-circle"
                                         style="width: 40px; height: 40px; object-fit: cover;"
                                         alt="Doktor"
                                         onerror="this.src='https://via.placeholder.com/40'" />
                                </td>
                                <td class="fw-bold">@item.FullName</td>
                                <td>
                                    <span class="badge bg-light text-dark border">
                                        @item.DepartmentName
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a href="/AdminDoctor/UpdateDoctor/@item.DoctorID" class="btn btn-outline-warning btn-sm me-1">
                                        <i class="fa fa-edit"></i> Güncelle
                                    </a>
                                    <a href="/AdminDoctor/DeleteDoctor/@item.DoctorID"
                                       class="btn btn-outline-danger btn-sm"
                                       onclick="return confirm('Bu doktoru silmek istediğinize emin misiniz?');">
                                        <i class="fa fa-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">
                                <i class="fa fa-info-circle me-1"></i> Kayıtlı doktor bulunamadı.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
