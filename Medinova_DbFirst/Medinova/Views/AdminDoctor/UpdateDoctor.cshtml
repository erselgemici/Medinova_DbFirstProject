@model Medinova.DTOs.DoctorDtos.UpdateDoctorDto

@{
    ViewBag.Title = "Doktor Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-warning bg-gradient text-dark py-3">
            <h5 class="mb-0"><i class="fa fa-user-edit me-2"></i>Doktor Bilgilerini Düzenle</h5>
        </div>
        <div class="card-body p-4">

            @using (Html.BeginForm("UpdateDoctor", "AdminDoctor", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.DoctorId)

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold text-secondary">Doktor Adı Soyadı</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa fa-user"></i></span>
                            @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "text-danger small mt-1" })
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold text-secondary">Uzmanlık Alanı (Bölüm)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa fa-hospital"></i></span>
                            @Html.DropDownListFor(x => x.DepartmentId, (List<SelectListItem>)ViewBag.Departments, "--- Bölüm Seçiniz ---", new { @class = "form-select" })
                        </div>
                        @Html.ValidationMessageFor(x => x.DepartmentId, "", new { @class = "text-danger small mt-1" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-bold text-secondary">Profil Resmi Yolu</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa fa-image"></i></span>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-md-12 mb-4">
                        <label class="form-label fw-bold text-secondary">Hakkında / Özgeçmiş</label>
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows = "5" })
                        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger small mt-1" })
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 border-top pt-3">
                    <a href="/AdminDoctor/Index" class="btn btn-light border px-4"><i class="fa fa-arrow-left me-1"></i> İptal</a>
                    <button type="submit" class="btn btn-warning px-4"><i class="fa fa-sync-alt me-1"></i> Güncelle</button>
                </div>
            }

        </div>
    </div>
</div>
